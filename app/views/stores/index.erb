<h1 class="ui header">  Take a look at all these stores! </h1>

<form method="get" action="/stores/new">
  <button type="submit" value="Submit">Create New Store</button>
</form>

<ul class="ui list">

<% @stores.each do |store| %>
	<li class="ui item">
	<a href="/stores/<%= store.id %>"> <%= store.name %> </a></li>
<% end %>

</ul>
